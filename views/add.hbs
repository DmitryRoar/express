<h1>Add pages</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Title Course</label>
       <span class="helper-text" data-error="enter valid title"></span>
    </div>


    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="enter valid count"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">UTL image</label>
        <span class="helper-text" data-error="enter valid url image"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>